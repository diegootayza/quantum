generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum AttachmentSource {
  USER_UPLOAD
  AI_GENERATED
}

model Model {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  active    Boolean  @default(true)
  name      String
  roles     String[]
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([roles])
}

model Chat {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  agent     ChatAgent?    @relation(fields: [agentId], references: [id])
  agentId   String?       @db.ObjectId
  messages  ChatMessage[]
  name      String
  user      User          @relation(fields: [userId], references: [id])
  userId    String        @db.ObjectId
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model ChatAgent {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  active      Boolean  @default(true)
  chats       Chat[]
  description String
  instruction String
  model       String
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ChatMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  chat      Chat     @relation(fields: [chatId], references: [id])
  chatId    String   @db.ObjectId
  parts     Json[]
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Conversation {
  id                      String                   @id @default(auto()) @map("_id") @db.ObjectId
  name                    String
  messages                ConversationMessage[]
  instruction             Instruction?             @relation(fields: [instructionId], references: [id])
  instructionId           String?                  @db.ObjectId
  user                    User                     @relation(fields: [userId], references: [id])
  userId                  String                   @db.ObjectId
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  conversationAttachments ConversationAttachment[]
}

model ConversationMessage {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  parts          Json[]
  role           String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String       @db.ObjectId
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model ConversationAttachment {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  key            String?
  mimeType       String
  size           Int
  source         AttachmentSource @default(USER_UPLOAD)
  conversation   Conversation     @relation(fields: [conversationId], references: [id])
  conversationId String           @db.ObjectId
  createdAt      DateTime         @default(now())
}

model Instruction {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  active        Boolean        @default(true)
  content       String
  conversations Conversation[]
  description   String
  name          String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  active        Boolean        @default(false)
  email         String         @unique
  name          String
  password      String
  role          UserRole       @default(USER)
  surname       String
  refreshToken  String?
  tokenExpiry   DateTime?
  conversations Conversation[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  chats         Chat[]
}

model Prompt {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  key         String @unique
  description String
  value       String
}

model Setting {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  namespace String @unique
  value     Json
}

model Usage {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  inputTokens  Int
  model        String
  outputTokens Int
  totalTokens  Int
  userId       String   @db.ObjectId
  createdAt    DateTime @default(now())

  @@index([model, totalTokens, userId, createdAt])
}

model Error {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  cause     String?
  code      String?
  env       String?
  message   String
  name      String?
  namespace String?
  release   String?
  stack     String?
  userId    String?  @db.ObjectId
  createdAt DateTime @default(now())

  @@index([namespace])
}
