generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

model Chat {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  agent     ChatAgent?    @relation(fields: [agentId], references: [id])
  agentId   String?       @db.ObjectId
  messages  ChatMessage[]
  name      String
  user      User          @relation(fields: [userId], references: [id])
  userId    String        @db.ObjectId
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([name])
}

model ChatAgent {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  active      Boolean  @default(true)
  chats       Chat[]
  description String
  instruction String
  model       String
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ChatMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  chat      Chat     @relation(fields: [chatId], references: [id])
  chatId    String   @db.ObjectId
  parts     Json[]
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Model {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  active    Boolean  @default(true)
  name      String
  roles     String[]
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([roles])
}

model Error {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  cause     String?
  code      String?
  env       String?
  message   String
  name      String?
  namespace String?
  release   String?
  stack     String?
  userId    String?  @db.ObjectId
  createdAt DateTime @default(now())

  @@index([namespace])
}

model Prompt {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  key         String @unique
  description String
  value       String
}

model Setting {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  namespace String @unique
  value     Json
}

model Usage {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  inputTokens  Int
  model        String
  outputTokens Int
  totalTokens  Int
  userId       String   @db.ObjectId
  createdAt    DateTime @default(now())

  @@index([model, totalTokens, userId, createdAt])
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  active       Boolean   @default(false)
  email        String    @unique
  name         String
  password     String
  role         UserRole  @default(USER)
  surname      String
  refreshToken String?
  tokenExpiry  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  chats        Chat[]
}
