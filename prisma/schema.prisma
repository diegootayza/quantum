generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum AttachmentSource {
  USER_UPLOAD
  AI_GENERATED
}

model Conversation {
  id                      String                   @id @default(auto()) @map("_id") @db.ObjectId
  name                    String
  messages                ConversationMessage[]
  instruction             Instruction?             @relation(fields: [instructionId], references: [id])
  instructionId           String?                  @db.ObjectId
  user                    User                     @relation(fields: [userId], references: [id])
  userId                  String                   @db.ObjectId
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  conversationAttachments ConversationAttachment[]
}

model ConversationMessage {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  parts          Json[]
  role           String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String       @db.ObjectId
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model ConversationAttachment {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  key            String?
  mimeType       String
  size           Int
  source         AttachmentSource @default(USER_UPLOAD)
  conversation   Conversation     @relation(fields: [conversationId], references: [id])
  conversationId String           @db.ObjectId
  createdAt      DateTime         @default(now())
}

model Instruction {
  id            String            @id @default(auto()) @map("_id") @db.ObjectId
  active        Boolean           @default(true)
  content       String
  description   String
  name          String
  conversations Conversation[]
  files         InstructionFile[]
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}

model InstructionFile {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  key           String?
  mimeType      String
  size          Int
  instruction   Instruction? @relation(fields: [instructionId], references: [id])
  instructionId String?      @db.ObjectId
  createdAt     DateTime     @default(now())
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  active        Boolean        @default(false)
  email         String         @unique
  name          String
  password      String
  role          UserRole       @default(USER)
  surname       String
  refreshToken  String?
  tokenExpiry   DateTime?
  conversations Conversation[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Prompt {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  key         String @unique
  description String
  value       String
}

model Setting {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  namespace String
  value     Json

  @@unique([namespace, name])
}
