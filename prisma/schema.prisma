generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model Attachment {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  mimeType       String
  r2Key          String?
  size           Int
  url            String?
  conversation   Conversation? @relation(fields: [conversationId], references: [id])
  conversationId String?       @db.ObjectId
  user           User?         @relation(fields: [userId], references: [id])
  userId         String?       @db.ObjectId
  createdAt      DateTime      @default(now())
}

model Category {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  active       Boolean       @default(true)
  name         String
  instructions Instruction[]
}

model Conversation {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  attachments   Attachment[]
  messages      Message[]
  instruction   Instruction? @relation(fields: [instructionId], references: [id])
  instructionId String?      @db.ObjectId
  user          User         @relation(fields: [userId], references: [id])
  userId        String       @db.ObjectId
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Instruction {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  active        Boolean        @default(true)
  content       String
  description   String
  name          String
  category      Category       @relation(fields: [categoryId], references: [id])
  categoryId    String         @db.ObjectId
  conversations Conversation[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  files         File[]
}

model File {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  mimeType      String
  r2Key         String
  size          Int
  instruction   Instruction? @relation(fields: [instructionId], references: [id])
  instructionId String?      @db.ObjectId
  createdAt     DateTime     @default(now())
}

model Message {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  parts          Json[]
  role           String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String       @db.ObjectId
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Setting {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  namespace String
  value     Json

  @@unique([namespace, name])
}

model Service {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  active          Boolean        @default(true)
  description     String
  name            String
  subscriptions   Subscription[] @relation(fields: [subscriptionIds], references: [id])
  subscriptionIds String[]       @db.ObjectId
  users           User[]         @relation(fields: [userIds], references: [id])
  userIds         String[]       @db.ObjectId
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model Subscription {
  id                   String    @id @default(auto()) @map("_id") @db.ObjectId
  active               Boolean   @default(true)
  currency             String    @default("USD")
  description          String
  features             Json[]
  interval             String
  name                 String
  price                Float
  stripeId             String?
  imageGenerationLimit Int       @default(0)
  services             Service[] @relation(fields: [serviceIds], references: [id])
  serviceIds           String[]  @db.ObjectId
  users                User[]
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model User {
  id                     String              @id @default(auto()) @map("_id") @db.ObjectId
  active                 Boolean             @default(false)
  email                  String              @unique
  name                   String
  password               String
  role                   Role                @default(USER)
  surname                String
  credits                Int                 @default(0)
  imageGenerationCount   Int                 @default(0)
  imageGenerationResetAt DateTime            @default(now())
  attachments            Attachment[]
  conversations          Conversation[]
  subscription           Subscription?       @relation(fields: [subscriptionId], references: [id])
  subscriptionId         String?             @db.ObjectId
  services               Service[]           @relation(fields: [serviceIds], references: [id])
  serviceIds             String[]            @db.ObjectId
  analyticsEvents        AnalyticsEvent[]
  creditTransactions     CreditTransaction[]
  createdAt              DateTime            @default(now())
  updatedAt              DateTime            @updatedAt
}

model AnalyticsEvent {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  eventType String
  metadata  Json     @default("{}")
  timestamp DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?  @db.ObjectId

  @@index([eventType])
  @@index([userId])
  @@index([timestamp])
}

enum TransactionType {
  PURCHASE
  CONSUMPTION
  REFUND
  BONUS
  SUBSCRIPTION_GRANT
}

model CreditTransaction {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  amount          Int
  type            TransactionType
  description     String
  balanceAfter    Int
  metadata        Json            @default("{}")
  user            User            @relation(fields: [userId], references: [id])
  userId          String          @db.ObjectId
  creditPackage   CreditPackage?  @relation(fields: [creditPackageId], references: [id])
  creditPackageId String?         @db.ObjectId
  createdAt       DateTime        @default(now())

  @@index([userId])
  @@index([type])
  @@index([createdAt])
}

model CreditPackage {
  id                 String              @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  description        String
  credits            Int
  price              Float
  currency           String              @default("USD")
  active             Boolean             @default(true)
  stripePriceId      String?
  stripeProductId    String?
  bonusCredits       Int                 @default(0)
  creditTransactions CreditTransaction[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}

model Model {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  active Boolean @default(true)
  label  String  @unique
  value  String  @unique
}
